<p><%= t '.help' %></p>

<% if photo.errors.any? %>
  <div><%= t '.form_error' %></div>
<% end %>

<%= form_for photo do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= field_error photo, :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= field_error photo, :description %>
  </div>
  <div>
    <%= f.label :tags %>
    <%= f.text_field :tags %>
  </div>
  <div>
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </div>
  <% unless photo.new_record? %>
    <div>
      <%= image_tag photo.picture.thumb.url %>
    </div>
  <% end %>
  <div>
    <%= f.submit %>
  </div>
<% end %>
